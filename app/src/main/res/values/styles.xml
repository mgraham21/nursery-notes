<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Add colors to application theme -->
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Screen" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/listBackground</item>
  </style>

  <style name="Screen.List">
    <item name="android:paddingTop">@dimen/list_item_padding</item>
    <item name="android:paddingBottom">@dimen/list_item_padding</item>
    <item name="android:paddingStart">@dimen/list_item_padding</item>
    <item name="android:paddingEnd">@dimen/list_item_padding</item>
  </style>

  <style name="ListItemContainer" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/list_item_padding</item>
    <item name="android:layout_marginBottom">@dimen/list_item_padding</item>
    <item name="android:layout_marginStart">@dimen/list_item_padding</item>
    <item name="android:layout_marginEnd">@dimen/list_item_padding</item>
    <item name="cardCornerRadius">@dimen/list_item_corner_radius</item>
  </style>

  <style name="ListItemContainer.Child">
    <item name="android:layout_marginTop">@dimen/list_item_overlap</item>
  </style>

  <style name="ListItemLayout" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">@dimen/list_item_padding</item>
    <item name="android:paddingBottom">@dimen/list_item_padding</item>
    <item name="android:paddingStart">@dimen/list_item_padding</item>
    <item name="android:paddingEnd">@dimen/list_item_padding</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>

  <style name="ListItemLayout.Child">
    <item name="android:orientation">horizontal</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:gravity">start|top</item>
  </style>

  <style name="ListItemText" parent="AppTheme"/>

  <style name="ListItemText.Activity" parent="@style/TextAppearance.AppCompat.Subhead">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="ListItemText.Activity.Child"></style>

  <style name="FloatingAction">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="useCompatPadding">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
