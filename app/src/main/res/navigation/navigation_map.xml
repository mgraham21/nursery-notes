  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/navigation_map"
  app:startDestination="@id/navigation_recent">

  <fragment
    android:id="@+id/navigation_recent"
    android:label="Recent"
    android:name="net.nurserynotes.controller.RecentActivitiesFragment"
    tools:layout="@layout/fragment_recent_activities"/>

  <fragment
    android:id="@+id/navigation_list_of_children"
    android:label="List of Children"
    android:name="net.nurserynotes.controller.ListOfChildrenFragment"
    tools:layout="@layout/fragment_list_of_children"/>

  <fragment
    android:id="@+id/navigation_list_of_activities"
    android:label="List of Activities"
    android:name="net.nurserynotes.controller.ListOfActivitiesFragment"
